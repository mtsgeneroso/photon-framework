{
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "color-hex-length": "long",
    "comment-empty-line-before": ["always", {
      "ignore": ["stylelint-commands"]
    }],
    "indentation": 2,
    "rule-empty-line-before": ["always", {
      "except": ["first-nested"],
      "ignore": ["after-comment"]
    }],
    "number-leading-zero": "never",
    "order/properties-alphabetical-order": true
  }
}